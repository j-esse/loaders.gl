{
  "name": "@loaders.gl/textures",
  "version": "3.0.0-alpha.4",
  "description": "Framework-independent loaders for compressed and super compressed (basis) textures ",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/visgl/loaders.gl"
  },
  "keywords": [
    "webgl",
    "loader",
    "3d",
    "texture",
    "compressed texture",
    "gpu texture",
    "PVR",
    "ETC",
    "basis"
  ],
  "types": "src/index.d.ts",
  "main": "dist/es5/index.js",
  "module": "dist/esm/index.js",
  "esnext": "dist/es6/index.js",
  "sideEffects": false,
  "files": [
    "src",
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "pre-build": "npm run copy-libs && npm run build-workers && npm run build-bundle && npm run build-bundle -- --env=dev",
    "copy-libs": "cp -rf ./src/libs ./dist/libs",
    "build-bundle": "webpack --stats=none --config ../../scripts/bundle.config.js",
    "build-workers": "npm run build-basis-worker && npm run build-npy-worker && npm run build-compressed-texture-worker && npm run build-crunch-worker",
    "build-basis-worker": "webpack --entry ./src/workers/basis-loader.worker.js -o ./dist/basis-loader.worker.js --config ../../scripts/worker-webpack-config.js",
    "build-npy-worker": "webpack --entry ./src/workers/npy-loader.worker.js -o ./dist/npy-loader.worker.js --config ../../scripts/worker-webpack-config.js",
    "build-compressed-texture-worker": "webpack --entry ./src/workers/compressed-texture-loader.worker.js -o ./dist/compressed-texture-loader.worker.js --config ../../scripts/worker-webpack-config.js",
    "build-crunch-worker": "webpack --entry ./src/workers/crunch-loader.worker.js -o ./dist/crunch-loader.worker.js --config ../../scripts/worker-webpack-config.js"
  },
  "dependencies": {
    "@loaders.gl/core": "3.0.0-alpha.4",
    "@loaders.gl/images": "3.0.0-alpha.4",
    "@loaders.gl/loader-utils": "3.0.0-alpha.4",
    "ktx-parse": "^0.0.4",
    "texture-compressor": "^1.0.2"
  }
}
